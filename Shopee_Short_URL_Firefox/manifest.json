{
  "manifest_version": 2,
  "name": "蝦皮短網址",
  "version": "1.0.3",
  "description": "將 Shopee 商品網址轉換成短網址並複製到剪貼簿，提供記錄管理介面。",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "clipboardWrite",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://shopee.tw/*"],
      "js": ["content.js"],
      "css": ["css/style.css"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "Shopee_Short_URL_chekvip@protonmail.com",
      "strict_min_version": "58.0"
    }
  }
}
